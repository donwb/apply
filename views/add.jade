div.row
     div.class("sixteen columns")
        div.offset-by-two
            div(class="twelve columns alpha")
                div.add-form
                    form(method='post', action='/add')
                        label Title: 
                            input(type="text", name="title")
                        label Subtitle:
                            input(type="text", name="subtitle")
