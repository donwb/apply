                            input(type="text", name="type", placeholder="developer or designer")
                        label Req. Number
                            input(type="text", name="req", placeholder="Starts with BR...")
                        label City:
                            input(type="text", name="location")
                        label Turner Jobs URL:
                            input(type="text", name="url")
                        label Description
                            textarea(type="text", name="writeup")

                        input(type="submit", value="Submit")  